// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//Murilo Leandro
model User {
  id Int @id @default (autoincrement())
  name String
  lastName String @map("last_name")
  email String @unique
  password String
  companyName String @map("company_name")
  corporateReason String? @map("corporate_reason")
  document String @unique
  stateRegistration String? @map("state_registration") 
  cep String
  address String
  number Int
  neighborhood String
  state String
  city String
  phone String
  site String?
  birth DateTime?
  
  isActive Boolean @map("is_active") @default(true)

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt

  services    Service[]
  clients     Client[]
  orders      Order[]
  products    Product[]
  signatures  Signature[]
  groups      GroupUser[]

  @@map("users")
}

//Marcos
model Signature{
  id Int @id @default (autoincrement())

  type String
  isActive Boolean @map("is_active")

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt

  userId     Int      @map("user_id")
  user     User   @relation(fields: [userId], references: [id])

  groupId   Int       @map("group_id")
  group    Group  @relation(fields: [groupId], references: [id])


  @@map("signatures")
}

//Leonardo
model Client {
  id Int @id @default (autoincrement())
  name String?
  lastName String? @map("last_name")
  companyName String? @map("company_name")
  corporateReason String? @map("corporate_reason")
  document String  @unique
  cep String
  phone String
  email String  @unique
  address String
  number Int
  neighborhood String
  state String
  city String
  isActive Boolean @map("is_active") @default(true)

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt

  orders    Order[]

  userId     Int      @map("user_id")

  user     User   @relation(fields: [userId], references: [id])

  @@map("clients")
}

// Murilo Andrade
model Service {
  id Int @id @default (autoincrement())

  nameService String @map("name_service")
  price Float 
  description String
  observations String
  isActive Boolean @map("is_active") @default(true)

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt 

  orders      Order[]
  userId    Int   @map("user_id")

  user      User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("services")
}

// Leonardo
model Product {
  id Int @id @default (autoincrement())

  name String
  category String
  description String
  salesUnit String      @map("sales_unit")
  quantity Int
  purchasePrice Float  @map("purchase_price")
  salePrice Float      @map("sale_price")
  observations String
  isActive Boolean      @map("is_active") @default(true)


 createdAt DateTime @map("created_at") @default(now())
 updatedAt DateTime @map("updated_at") @updatedAt 

  shops     Shop[]

  userId    Int   @map("user_id")

  user      User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("products")
}

// Marcos
model Shop{
  id Int @id @default (autoincrement())

  amount Int
  salePrice Float      @map("sale_price")
  

 createdAt DateTime @map("created_at") @default(now())
 updatedAt DateTime @map("updated_at") @updatedAt 

  productId  Int      @map("product_id")
  orderId    Int      @map("orderId_id")

  product    Product  @relation(fields: [productId], references: [id])
  order      Order    @relation(fields: [orderId], references: [id])

  @@map("shops")
}

// Murilo Andrade
model Order{
  id Int @id @default (autoincrement())

  equipment    String  
  defect       String  
  report       String  
  guarantee    String  
  status       String  
  dateCreate   String  @map("date_create")
  dateDelivery String  @map("date_delivery")
  dateRecipt   String  @map("date_recipt")

 createdAt DateTime @map("created_at") @default(now())
 updatedAt DateTime @map("updated_at") @updatedAt 

  shops     Shop[]

  userId        Int      @map("user_id")
  serviceId     Int      @map("service_id")
  clientId      Int      @map("client_id")
  

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  service     Service  @relation(fields: [serviceId], references: [id])
  client      Client   @relation(fields: [clientId], references: [id])


  @@map("orders")
}

model Role{
  id            Int     @id @default(autoincrement())
  name          String  @unique
  description   String

  groups RoleGroup[]
}

model Group{
  id            Int     @id @default(autoincrement())
  name          String  @unique
  description   String

  roles RoleGroup[]
  users GroupUser[]
  signatures Signature[]
}

model GroupUser{
  id Int @id @default(autoincrement())

  user User @relation(fields: [userId], references: [id])
  userId Int

  group Group @relation(fields: [groupId], references: [id])
  groupId Int

  @@unique([userId, groupId], name: "userId_groupId")
}

model RoleGroup{
  id Int @id @default(autoincrement())

  group Group @relation(fields: [groupId], references: [id])
  groupId Int

  role Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@unique([groupId, roleId], name: "groupId_roleId")
}




